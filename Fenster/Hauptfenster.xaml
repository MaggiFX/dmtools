<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dmtools"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="dmtools.MainWindow"
        mc:Ignorable="d"
        Title="Hauptfenster"
        Height="900"
        Width="1600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="49*"/>
        </Grid.ColumnDefinitions>
        <TabControl Margin="10,10,10,10" Grid.ColumnSpan="2">
            <TabItem Header="GM Tools">
                <Grid>

                </Grid>
            </TabItem>

            <TabItem Header="Gegenstände">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="101*"/>
                        <RowDefinition Height="720*"/>
                    </Grid.RowDefinitions>

                    <Button Content="Neu..." Margin="10,10,1479,63" Click="Btn_NeuerGegenstand"/>
                    <Button Content="Import Json" Margin="10,46,1479,27" Click="Btn_NeuerGegenstandJson"/>
                    <Button Content="Suchen" Margin="102,10,1404,63" Click="SucheGegenstand" Width="60" Height="28"></Button>

                    <Label Margin="167,10,1355,63">Name</Label>
                    <TextBox x:Name="SuchName" Margin="211,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="160" Height="28"></TextBox>
                    <Label Margin="376,10,1130,63" Content="Min-Wert"/>
                    <TextBox x:Name="SuchMinWert" Margin="436,10,1070,63" Width="60" Height="28"/>
                    <Label Margin="501,10,1003,63" Content="Max-Wert"/>
                    <TextBox x:Name="SuchMaxWert" Margin="563,10,943,63" Width="60" Height="28"/>

                    <ListView x:Name="ErgebnisseGegenstand" Margin="100,46,10,10" Grid.RowSpan="2">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Id" Width="40" DisplayMemberBinding="{Binding Id}"/>
                                <GridViewColumn Header="Name" Width="250" DisplayMemberBinding="{Binding Name}"/>
                                <GridViewColumn Header="Wert" Width="80" DisplayMemberBinding="{Binding Wert}"/>
                                <GridViewColumn Header="Gewicht" Width="80" DisplayMemberBinding="{Binding Gewicht}"/>
                                <GridViewColumn Header="Seltenheit" Width="80" DisplayMemberBinding="{Binding Seltenheit}"/>
                                <GridViewColumn Header="Beschreibung" DisplayMemberBinding="{Binding Beschreibung}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    

                </Grid>
            </TabItem>

        </TabControl>

    </Grid>
</Window>
